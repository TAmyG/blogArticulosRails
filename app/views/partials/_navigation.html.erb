<header>
	<nav class = "be-red white large-padding">
		<ul class = "no-list row center-xs">
			<li class= "col-xs white">
				<h1 class="no-margin" id="logo"><%= link_to "Blog Rils", root_path%></h1>
			</li>
			<li class= "col-xs">
				<%= link_to "Articulos", articles_path%>
				
			</li>

			<% @categories.each do |category| %>

				<li class= "col-xs">
					<%= link_to category.name, category%>
				
				</li>

			<%end%>			

			<% if user_signed_in?%>
				<li class= "col-xs">
					<%= link_to "Logout", destroy_user_session_path, method: :delete%>
				</li>
			<%else%>
				<li class= "col-xs">
					<%= link_to "Login", new_user_session_path%>
				</li>

				<li class= "col-xs">
					<%= link_to "Crear Cuenta", new_user_registration_path%>
				</li>
			<%end%>
		</ul>	
	</nav>
</header>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>